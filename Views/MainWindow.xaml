<Window x:Class="ZapretTraficAnalyz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ZapretTraficAnalyz.ViewModels"
        xmlns:views="clr-namespace:ZapretTraficAnalyz.Views"
        mc:Ignorable="d"
        Title="Game Traffic Analyzer &amp; Zapret Helper" Height="650" Width="1150"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:TraficAnalyzViewModel}">
            <views:TraficAnalyzView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GenCfgViewModel}">
            <views:GenCfgView />
        </DataTemplate>

        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#AAAAAA" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#007ACC" BorderThickness="0,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                           FontFamily="Segoe UI Symbol" Margin="0,0,10,0" Width="20"
                                           TextAlignment="Center" />
                                <ContentPresenter VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="border" Property="Background" Value="#2D2D30" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="border" Property="Background" Value="#252526" />
                                <Setter TargetName="border" Property="BorderThickness" Value="4,0,0,0" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="TRAFFIC HUNTER" Foreground="#007ACC" FontWeight="Bold"
                           FontSize="18" Margin="20,20,20,30" HorizontalAlignment="Center" />

                <RadioButton Content="Мониторинг" Tag="📡"
                             Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding GoToScannCommand}"
                             IsChecked="True" />

                <RadioButton Content="Генератор конфига" Tag="⚙️"
                             Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding GoToGenCommand}" />

                <RadioButton Content="Настройки" Tag="🔧"
                             Style="{StaticResource MenuButtonStyle}" />
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>

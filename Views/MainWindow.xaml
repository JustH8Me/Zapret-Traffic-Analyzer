<Window x:Class="ZapretTraficAnalyz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ZapretTraficAnalyz.ViewModels"
        xmlns:views="clr-namespace:ZapretTraficAnalyz.Views"
        Title="Game Traffic Analyzer &amp; Zapret Helper" Height="600" Width="900">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- 3. ТЕПЕРЬ РИСУЕМ ИНТЕРФЕЙС, ГДЕ ИСПОЛЬЗУЕМ СТИЛЬ -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2D2D30">
            <StackPanel>

                <RadioButton Content="📡 СКАНЕР" 
                             Style="{StaticResource MenuButtonStyle}" 
                             Command="{Binding GoToScannCommand}" 
                             IsChecked="True"/>
                
                <RadioButton Content="⚙️ ГЕНЕРАТОР" 
                             Style="{StaticResource MenuButtonStyle}" 
                             Command="{Binding GoToGenCommand}"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:TraficAnalyzViewModel}">
                    <views:TraficAnalyzView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:GenCfgViewModel}">
                    <views:GenCfgView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
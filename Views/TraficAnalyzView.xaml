<UserControl x:Class="ZapretTraficAnalyz.Views.TraficAnalyzView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ZapretTraficAnalyz.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="550"
             d:DataContext="{d:DesignInstance Type=vm:TraficAnalyzViewModel}">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ToolBarButton">
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="Background" Value="#3E3E42" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#555" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#505055" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#007ACC" />
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#007ACC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="GroupHeader">
            <Setter Property="Foreground" Value="#888" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,3" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30" Padding="10,10,10,15" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <WrapPanel Orientation="Horizontal">

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="ИМЯ ПРОЦЕССА.exe" Style="{StaticResource GroupHeader}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{Binding TargetProcess, UpdateSourceTrigger=PropertyChanged}" Width="100"
                                 VerticalContentAlignment="Center"
                                 Background="#1E1E1E" Foreground="White" BorderBrush="#555" Padding="5" />
                        <Button Style="{StaticResource ToolBarButton}" Command="{Binding ToggleScanCommand}"
                                Content="{Binding ScanButtonText}" Width="90" Margin="5,0,0,0" />
                    </StackPanel>
                </StackPanel>

                <Rectangle Width="1" Height="25" Fill="#444" Margin="0,10,15,0" VerticalAlignment="Center" />

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="ПОИСК IP В ФАЙЛАХ" Style="{StaticResource GroupHeader}" />
                    <Button Style="{StaticResource ToolBarButton}" Command="{Binding StaticScanCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📂" Margin="0,0,5,0" />
                            <TextBlock Text="Скан Файлов" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="ИСТОРИЯ" Style="{StaticResource GroupHeader}" />
                    <Button Style="{StaticResource ToolBarButton}" Command="{Binding LoadDnsCacheCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📜" Margin="0,0,5,0" />
                            <TextBlock Text="DNS Кэш" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Rectangle Width="1" Height="25" Fill="#444" Margin="0,10,15,0" VerticalAlignment="Center" />

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="АНАЛИЗ" Style="{StaticResource GroupHeader}" />
                    <StackPanel Orientation="Horizontal">
                        <Button Content="🔍 Check Access" Command="{Binding CheckAccessCommand}"
                                Style="{StaticResource ToolBarButton}" Background="#D35400" />
                        <Button Content="🌍 Resolve IPs" Command="{Binding ResolveNamesCommand}"
                                Style="{StaticResource ToolBarButton}" Background="#2980B9" />
                    </StackPanel>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="ЭКСПОРТ" Style="{StaticResource GroupHeader}" />
                    <Button Style="{StaticResource ToolBarButton}" Background="#27AE60" BorderBrush="#2ECC71">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾 Сохранить" FontWeight="Bold" />
                            <TextBlock Text=" ▼" FontSize="10" VerticalAlignment="Center" />
                        </StackPanel>
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="💾 Только отмеченные" Command="{Binding SaveCommand}"
                                          CommandParameter="Selected" />
                                <Separator />
                                <MenuItem Header="⛔ Только Blocked" Command="{Binding SaveCommand}"
                                          CommandParameter="Blocked" />
                                <MenuItem Header="✅ Только Available" Command="{Binding SaveCommand}"
                                          CommandParameter="Ok" />
                                <MenuItem Header="🌍 Весь список" Command="{Binding SaveCommand}"
                                          CommandParameter="All" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </WrapPanel>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" Margin="0" BorderThickness="0"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="#1E1E1E" RowBackground="#1E1E1E" AlternatingRowBackground="#252526"
                  Foreground="#DDDDDD" HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#333">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2D2D30" />
                    <Setter Property="Foreground" Value="#AAA" />
                    <Setter Property="Padding" Value="10,8" />
                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                    <Setter Property="BorderBrush" Value="#333" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="40">
                    <DataGridTemplateColumn.Header>
                        <CheckBox
                            IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Command="{Binding DataContext.ToggleAllSelectionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Access" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center" FontSize="11" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Proto" Width="65">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#333" CornerRadius="3" Padding="4,2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Protocol}" FontWeight="Bold" FontSize="10" Foreground="#AAA" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Target Addr" Binding="{Binding RemoteIP}" Width="120" Foreground="#4EC9B0" />
                <DataGridTextColumn Header="Domain / Hostname" Binding="{Binding Domain}" Width="*"
                                    FontWeight="SemiBold" />

                <DataGridTemplateColumn Header="Location / Provider" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProviderName}" FontSize="11" FontWeight="Bold"
                                           Foreground="#569CD6" TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding GeoLocation}" FontSize="10" Foreground="#888" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Traffic Type" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="#444" BorderBrush="#666" BorderThickness="1" CornerRadius="4"
                                    Padding="6,2"
                                    HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TrafficType}" Foreground="White" FontSize="10"
                                           FontWeight="Bold" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Packets" Binding="{Binding PacketCount}" Width="60" Foreground="#777" />
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="#007ACC" Padding="10,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusText}" Foreground="White" FontWeight="SemiBold" FontSize="11" />
                <TextBlock Text=" | " Foreground="#55FFFFFF" Margin="5,0" />
                <TextBlock Text="{Binding Items.Count, StringFormat='Найдено записей: {0}'}" Foreground="White"
                           FontSize="11" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
